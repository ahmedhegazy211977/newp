<odoo>
    <record id="view_res_config_settings_twilio" model="ir.ui.view">
        <field name="name">res.config.settings.twilio</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id = 'languages']" position="after">
                <div class="app_settings_block" data-string="Twilio Settings">
                    <h2>Twilio Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="twilio_account_sid">Twilio Account SID</label>
                                <field name="twilio_account_sid" />
                            </div>
                            <div class="form-group">
                                <label for="twilio_auth_token">Twilio Auth Token</label>
                                <field name="twilio_auth_token" />
                            </div>
                            <div class="form-group">
                                <label for="twilio_from_number">Twilio From Number</label>
                                <field name="twilio_from_number" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
