<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="address" inherit_id="portal.portal_my_details_fields">
        <xpath expr="//select[@name='country_id']" position="replace">
            <select name="country_id" t-attf-class="form-select #{error.get('country_id') and 'is-invalid' or ''}" t-att-disabled="None if partner_can_edit_vat else '1'">
                <option value="">Country...</option>
                <t t-foreach="countries or []" t-as="country">
                    <option t-att-value="country.id" t-att-selected="country.id == int(country_id) if country_id else country.id == partner.country_id.id if partner.country_id else country.id == 192">
                        <t t-esc="country.name" />
                    </option>
                </t>
            </select>
        </xpath>
        <xpath expr="//select[@name='state_id']" position="replace">
            <select name="state_id" t-attf-class="form-select #{error.get('state_id') and 'is-invalid' or ''}">
                <option value="">select...</option>
                <t t-foreach="states or []" t-as="state">
                    <!-- <option t-att-value="state.id" style="display:none;" t-att-data-country_id="state.country_id.id" t-att-selected="state.id == int(state_id) if state_id else state.id == partner.state_id.id if partner.state_id else state.id == 1644"> -->
                    <option t-att-value="state.id" style="display:none;" t-att-data-country_id="state.country_id.id" t-att-selected="state.name in 'Riyadh'">
                        <t t-esc="state.name" />
                    </option>
                </t>
            </select>
        </xpath>
    </template>
    <template id="address_2" inherit_id="website_sale.address">
        <xpath expr="//select[@name='country_id']" position="replace">
            <select id="country_id" name="country_id" t-attf-class="form-select #{error.get('country_id') and 'is-invalid' or ''}" t-att-mode="mode[1]">
                <option value="">Country...</option>
                <t t-foreach="countries" t-as="c">
                    <option t-att-value="c.id" t-att-selected="c.id == (country and country.id or 192)">
                        <t t-esc="c.name" />
                    </option>
                </t>
            </select>
        </xpath>
    </template>
     <template id="sale_order_portal_content_inherit_sale_stock"
        name="Orders Shipping Followup"
        inherit_id="sale_stock.sale_order_portal_content_inherit_sale_stock">
        <xpath expr="//div[@name='delivery_order']" position="inside">
            <div name="delivery_ship_details" class="d-flex align-items-center justify-content-between">
                <span t-if="picking.for_you_state == 'delivered'" class="small badge text-bg-success orders_label_text_align">
                        Delivery State : <i class="fa fa-fw fa-truck"/> Delivered  
                </span>
                <span t-elif="picking.for_you_state == 'cancelled'"
                    class="small badge text-bg-danger orders_label_text_align">
                   Delivery State : <i class="fa fa-fw fa-truck"/> Cancelled  
                </span>
                <span t-elif="picking.for_you_state == 'new'"
                    class="small badge text-bg-info orders_label_text_align">
                        Delivery State : <i class="fa fa-fw fa-truck"/> Preparing  
                </span>
                <span t-elif="picking.for_you_state == 'picked'"
                    class="small badge text-bg-info orders_label_text_align">
                        Delivery State : <i class="fa fa-fw fa-truck"/> Order Picked  
                </span>
                <span t-elif="picking.for_you_state == 'in_shop'"
                    class="small badge text-bg-info orders_label_text_align">
                        Delivery State : <i class="fa fa-fw fa-truck"/> Driver in shop
                </span>
                <span t-elif="picking.for_you_state == 'ride'"
                    class="small badge text-bg-info orders_label_text_align">
                        Delivery State : <i class="fa fa-fw fa-truck"/> Driver in road to shop
                </span>
                <span t-elif="picking.for_you_state == 'shipped'"
                    class="small badge text-bg-info orders_label_text_align">
                        Delivery State : <i class="fa fa-fw fa-truck"/> Order Shipped 
                </span>
                
            </div>
        </xpath>
    </template>
    
    <template id="website_sale.payment_delivery_methods">
            <!-- Conditionally render radio buttons or dropdown -->
            <t t-if="delivery.delivery_type != 'onsite'">
                <!-- Render Radio Button -->
                <input class="pe-none" 
                    t-att-value="delivery.id" 
                    t-att-id="'delivery_%i' % delivery.id" 
                    t-att-delivery_type="delivery.delivery_type" 
                    type="radio" 
                    name="delivery_type" 
                    t-att-checked="order.carrier_id and order.carrier_id.id == delivery.id and 'checked' or False"/>
                <label class="label-optional" t-field="delivery.name"/>
                <span class="o_wsale_delivery_badge_price float-end fw-bold" name="price">Select to compute delivery rate</span>
                
                <!-- Use delivery_method logic as before -->
                <t t-set='delivery_method' t-value="delivery.delivery_type+'_use_locations'" />
                
                <div class="small">
                    <div class="d-none">
                        <span class="o_order_location">
                            <b class="o_order_location_name"/>
                            <br/>
                            <i class="o_order_location_address"/>
                        </span>
                        <span class="fa fa-times ms-2 o_remove_order_location" aria-label="Remove this location" title="Remove this location"/>
                    </div>
                    
                    <t t-if="delivery_method in delivery.fields_get() and delivery[delivery_method]">
                        <div class="o_show_pickup_locations"/>
                        <div class="o_list_pickup_locations"/>
                    </t>
                </div>

                <!-- Display website description if available -->
                <t t-if="delivery.website_description">
                    <div t-field="delivery.website_description" class="text-muted mt8"/>
                </t>    
            </t>
            
     </template>
     <template id="payment_delivery_methods_free">
        <option t-att-value="delivery.id" t-att-data-delivery_type="delivery.delivery_type">
            <t t-esc="delivery.name"/>
        </option>
     </template>
     <template id="payment_delivery" name="Delivery Costs" inherit_id="website_sale.payment_delivery">
        <!-- //t[@t-if='website_sale_order.amount_total'] should be removed in master -->
        <xpath expr="//ul[@class='list-group']" position="replace">
            <ul class="list-group">
                <t t-foreach="deliveries" t-as="delivery">
                    <t t-if="delivery.delivery_type != 'onsite'">
                        <li class="list-group-item o_delivery_carrier_select">
                            <t t-call="website_sale.payment_delivery_methods"/>
                        </li>
                    </t>
                </t>
                <t t-set="in_branch" t-value="False"/>
                <t t-foreach="deliveries" t-as="delivery">
                    <t t-if="delivery.delivery_type == 'onsite' and not in_branch">
                        <t t-if="order.carrier_id and order.carrier_id.id==delivery.id">
                            <t t-set="in_branch" t-value="delivery"/>
                        </t>
                    </t>
                </t>
                <t t-if="not in_branch">
                    <t t-foreach="deliveries" t-as="delivery">
                        <t t-if="delivery.delivery_type == 'onsite' and not in_branch">
                            <t t-set="in_branch" t-value="delivery"/>
                        </t>
                    </t>
                </t>
                
                <t t-if="in_branch">
                   <li class="list-group-item o_delivery_carrier_select">            
                        <input class="pe-none dynamic_delivery_value" 
                            t-att-value="in_branch.id" 
                            t-att-id="'delivery_%i' % in_branch.id" 
                            t-att-delivery_type="in_branch.delivery_type" 
                            type="radio" 
                            name="delivery_type" 
                            t-att-checked="order.carrier_id and order.carrier_id.id == in_branch.id and 'checked' or False"/>
                        <!-- <label class="label-optional" t-field="in_branch.name"/> -->
                        <label class="label-optional"> استلام في الفرع</label>
                        
                        <span class="o_wsale_delivery_badge_price float-end fw-bold" name="price">Select to compute delivery rate</span>
                        
                        <!-- Use delivery_method logic as before -->
                        <t t-set='delivery_method' t-value="in_branch.delivery_type+'_use_locations'" />
                        
                        <div class="small">
                            <div class="d-none">
                                <span class="o_order_location">
                                    <b class="o_order_location_name"/>
                                    <br/>
                                    <i class="o_order_location_address"/>
                                </span>
                                <span class="fa fa-times ms-2 o_remove_order_location" aria-label="Remove this location" title="Remove this location"/>
                            </div>
                            
                            <t t-if="delivery_method in in_branch.fields_get() and delivery[delivery_method]">
                                <div class="o_show_pickup_locations"/>
                                <div class="o_list_pickup_locations"/>
                            </t>
                        </div>

                        <!-- Display website description if available -->
                        <t t-if="in_branch.website_description">
                            <div t-field="in_branch.website_description" class="text-muted mt8"/>
                        </t>
                        <select name="delivery_type_select" class="form-select" id="delivery_select" onchange="updateDeliveryDetails(this)">
                            <t t-foreach="deliveries" t-as="delivery">
                                <t t-if="delivery.delivery_type == 'onsite'">
                                    <t t-call="leajlak_delivery.payment_delivery_methods_free"/>
                                </t>
                            </t>
                        </select>
                    </li> 
                </t>
            </ul>
            <script>
                function updateDeliveryDetails(selectElement) {
                    // Get selected option
                    var selectedOption = selectElement.options[selectElement.selectedIndex];
                    var deliveryId = selectedOption.value; // Get the delivery ID
                    var deliveryType = selectedOption.getAttribute('data-delivery_type'); // Get the delivery type

                    // Update the radio input field dynamically
                    <!-- var radioInput = document.getElementById('dynamic_delivery_id'); -->
                    var radioInput = document.querySelector('.dynamic_delivery_value');
                    radioInput.value = deliveryId;  // Update value
                    radioInput.id = 'delivery_' + deliveryId; // Update id
                    radioInput.setAttribute('delivery_type', deliveryType); // Update delivery type attribute
                    
                    // var parentLi = radioInput.closest('li');
                    //if (parentLi) {
                    //    parentLi.click();
                    //} 
                    var parentUl = radioInput.closest('ul');
                    if (parentUl) {
                        var firstLi = parentUl.querySelector('li:first-child');
                        if (firstLi) {
                            firstLi.click();
                        }
                        var selectedLi = radioInput.closest('li');                        
                        if (selectedLi) {
                            selectedLi.click();
                        }
                    }
                }
            </script>
        </xpath>
    </template>
</odoo>

