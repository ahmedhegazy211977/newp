<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='companies']" position="after">
                    <div id="our_sms_integration">
                        <h2>OUR SMS Integrations</h2>
                        <div class="row mt16 o_settings_container">
                            <div id="oursms_setting_setting"
                                 class="col-xs-12 col-md-12 o_setting_box">
                                <div class="o_setting_left_pane">

                                </div>
                                <div class="o_setting_right_pane"
                                     name="our_sms_right_pane">
                                    <div class="content-group"
                                    >
                                        <div class="row">
                                            <label string="OUR SMS Sender"
                                                   for="oursms_sender"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="oursms_sender"

                                                   class="oe_inline"/>
                                        </div>
                                        <div class="row">
                                            <label string="OUR SMS API Token"
                                                   for="oursms_api_token"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="oursms_api_token"

                                                   class="oe_inline"/>
                                        </div>


                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </xpath>


            </field>
        </record>


    </data>
</odoo>